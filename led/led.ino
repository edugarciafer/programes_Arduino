//*********************************** SETUP ***************************************
void setup()
{
pinMode (2, OUTPUT); // marca pin2 com a sortida
}

//************************************ LOOP ***************************************
void loop()
{
digitalWrite (2, HIGH); // engega pin2 (led)
delay (500); // espera 0.5 segons
digitalWrite (2, LOW); // atura pin2 (led)
delay (500); // espera 0.5 segons
}

