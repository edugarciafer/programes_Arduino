}

//************************************ LOOP ***************************************
void loop()
{if(digitalRead(4)){ // si pin4 est√† alt
  digitalWrite ( 2, HIGH); // posa pin2 alt
}else{digitalWrite ( 2, LOW); //en cas contrari posa pin2 baix (apaga)
}
}

